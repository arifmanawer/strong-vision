{
  "manifest_version": 2,
  "name": "Screen Time",
  "version": "1.0.0",
  "description": "Creates popups every 25 minutes with an exercise for better eye health",
  "short_name": "screentime",
  "permissions": ["tabs", "storage", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "ScreenTime Calculator",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
